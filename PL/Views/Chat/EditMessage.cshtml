@model PL.Models.ChatMessageModel

@{
	ViewBag.Title = "EditMessage";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditMessage</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>ChatMessageDTO</h4>
		<hr/>
		@Html.ValidationSummary(true, "", new {@class = "text-danger"})
		<div class="form-group">
			@Html.LabelFor(model => model.ChatMessage.Message, new {@class = "control-label col-md-2"})
			<div class="col-md-10">
				@Html.TextAreaFor(model => model.ChatMessage.Message, new {htmlAttributes = new {@class = "form-control"}})
				@Html.ValidationMessageFor(model => model.ChatMessage.Message, "", new {@class = "text-danger"})
			</div>
		</div>


		@Html.HiddenFor(model => model.ChatId)
		@Html.HiddenFor(model => model.ChatMessage.ID)


		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-primary"/>
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index", new {id = Model.ChatId})
</div>